{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useConst": "error",
				"useTemplate": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn"
			},
			"complexity": {
				"noForEach": "warn",
				"useOptionalChain": "error"
			},
			"performance": {
				"noAccumulatingSpread": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "es5",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"attributePosition": "auto"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"files": {
		"ignore": [
			"routeTree.gen.ts",
			"src/routeTree.gen.ts",
			"node_modules/**",
			"dist/**",
			"build/**",
			"*.min.js",
			"*.bundle.js",
			"coverage/**",
			".next/**",
			"out/**",
			"*.config.{js,ts}",
			"vite.config.ts",
			"package.json",
			"tsconfig.json",
			"metadata.json",
			"biome.json"
		],
		"ignoreUnknown": false
	},
	"overrides": [
		{
			"include": ["**/routeTree.gen.ts"],
			"linter": {
				"enabled": false,
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			},
			"formatter": {
				"enabled": false
			}
		},
		{
			"include": ["package.json", "tsconfig.json", "*.config.{js,ts}"],
			"formatter": {
				"enabled": false
			}
		}
	]
}
