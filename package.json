{
	"name": "character-sheet-ai-assistant",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"workspaces": ["apps/*"],
	"scripts": {
		"dev": "concurrently \"bun run dev:front\" \"bun run dev:back\"",
		"dev:front": "cd apps/front && bun run dev",
		"dev:back": "cd apps/backend && bun run dev",
		"build": "bun run build:front && bun run build:back",
		"build:front": "cd apps/front && bun run build",
		"build:back": "cd apps/backend && bun run build",
		"deploy": "cd apps/backend && bun run deploy",
		"lint": "bun run lint:front",
		"lint:front": "cd apps/front && bun run lint",
		"format": "bun run format:front",
		"format:front": "cd apps/front && bun run format",
		"typecheck": "bun run typecheck:front",
		"typecheck:front": "cd apps/front && bun run typecheck"
	},
	"devDependencies": {
		"concurrently": "^8.2.2"
	},
	"packageManager": "bun@1.1.0"
}
